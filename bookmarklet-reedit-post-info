javascript:(async()=>{const t=new URLSearchParams(window.location.search).get("q");if(!t)return void alert("No query found in the URL. Make sure you are on a search results page.");const e=`https://www.reddit.com/search.json?q=${encodeURIComponent(t)}`;console.log("Fetching JSON from:",e);try{const t=await fetch(e);if(!t.ok)return console.error("Fetch failed with status:",t.status),void alert("Failed to fetch JSON data.");const n=await t.json();console.log("Fetched JSON data:",n);const o=n?.data?.children||[];if(!o.length)return console.warn("No children found in JSON response."),void alert("No matching posts found.");for(const t of o){const e=t.data.subreddit||"Unknown Subreddit",a=t.data.author||"Unknown Author",o=t.data.id,r=t.data.created_utc*1000;let u="N/A";try{const t=await fetch(`https://www.reddit.com/user/${a}/about.json`);if(t.ok){const n=await t.json();u=new Intl.DateTimeFormat(navigator.language,{dateStyle:"medium",timeStyle:"short"}).format(new Date(n?.data?.created_utc*1000))}else console.warn(`Failed to fetch user info for: ${a}`)}catch(t){console.warn(`Error fetching user info for ${a}:`,t)}const c=document.querySelector(`a[href*="/comments/${o}/"]`);if(c){console.log(`Found post element for ID: ${o}`);const t=c.closest("div");if(t){const n=document.createElement("div");n.style.color="gray",n.style.fontSize="0.9em",n.style.marginTop="5px";const l=new Intl.DateTimeFormat(navigator.language,{dateStyle:"medium",timeStyle:"short"}).format(new Date(r));n.innerHTML=`Author: <strong>${a}</strong> | Author Created: <strong>${u}</strong> | Post Created: <strong>${l}</strong>`,t.appendChild(n)}}else console.warn(`No matching element found for post ID: ${o}`)}}catch(t){console.error("Error fetching or processing JSON data:",t),alert("An error occurred while processing the JSON data.")}})();
